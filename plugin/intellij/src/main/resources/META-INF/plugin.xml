<idea-plugin>
    <id>com.blazebit.persistence.intellij</id>
    <name>Blaze-Persistence Support</name>
    <version>1.0</version>
    <vendor url="https://persistence.blazebit.com">Blaze-Persistence</vendor>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="192"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.java</depends>
    <depends>org.intellij.intelliLang</depends>

    <extensions defaultExtensionNs="org.intellij.intelliLang">
        <injectionConfig config="javaInjections.xml"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <fileType name="JPQL.Next-Expression" language="JPQL.Next-Expression" implementationClass="com.blazebit.persistence.plugin.intellij.JpqlNextExpressionFileType"/>
        <lang.syntaxHighlighterFactory language="JPQL.Next-Expression" implementationClass="com.blazebit.persistence.plugin.intellij.JpqlNextExpressionSyntaxHighlighterFactory"/>
        <lang.parserDefinition language="JPQL.Next-Expression" implementationClass="com.blazebit.persistence.plugin.intellij.JpqlNextExpressionParserDefinition"/>
        <lang.ast.factory language="JPQL.Next-Expression" implementationClass="com.blazebit.persistence.plugin.intellij.JpqlNextExpressionASTFactory"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="BlazePersistence.NewEntityView" class="com.blazebit.persistence.plugin.intellij.NewEntityViewAction" text="Edit Entity View" description="Edits entity view.">
            <!-- Add new -->
<!--            <add-to-group group-id="NewGroup" anchor="first"/>-->
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
            <add-to-group group-id="ProjectViewPopupMenu" relative-to-action="CutCopyPasteGroup" anchor="before"/>
        </action>

        <action id="BlazePersistence.GenerateEntityViewAttributes" class="com.blazebit.persistence.plugin.intellij.GenerateEntityViewAttributesAction" text="Generate Entity View Attributes">
            <add-to-group group-id="GenerateGroup" anchor="first"/>
        </action>
    </actions>

</idea-plugin>
