    <modelVersion>4.0.0</modelVersion>

    <artifactId>blaze-persistence-examples-quarkus-testsuite-native</artifactId>
    <packaging>pom</packaging>

    <profiles>
        <profile>
            <id>postgresql</id>
            <modules>
                <module>postgresql</module>
            </modules>
        </profile>
        <profile>
            <id>h2</id>
            <modules>
                <module>h2</module>
            </modules>
        </profile>
        <profile>
            <id>mysql8</id>
            <modules>
                <module>mysql</module>
            </modules>
        </profile>
        <profile>
            <id>mssql</id>
            <modules>
                <module>mssql</module>
            </modules>
        </profile>
        <profile>
            <id>db2</id>
            <modules>
                <module>db2</module>
            </modules>
        </profile>
        <profile>
            <id>blazebit-release</id>
            <modules>
                <module>postgresql</module>
                <module>h2</module>
                <module>mysql</module>
                <module>mssql</module>
                <module>db2</module>
            </modules>
        </profile>
        <profile>
            <id>windows</id>
            <activation>
                <os><family>windows</family></os>
            </activation>
            <properties>
                <runnerExtension>.exe</runnerExtension>
            </properties>
        </profile>
    </profiles>

    <properties>
        <quarkus.package.type>native</quarkus.package.type>
        <runnerExtension />
        <skipITs />
    </properties>
</project>