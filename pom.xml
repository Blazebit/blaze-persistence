    <profiles>
        <profile>
            <!-- It disables javadoc doclint for JDK > 8 -->
            <id>javadoc-xdoclint-disable-jdk8+</id>
            <activation>
                <jdk>[1.8,)</jdk>
            </activation>
            <build>
                <pluginManagement>
                    <plugins>
                        <plugin>
                            <groupId>org.apache.maven.plugins</groupId>
                            <artifactId>maven-javadoc-plugin</artifactId>
                            <configuration>
                                <additionalJOption>-Xdoclint:none</additionalJOption>
                            </configuration>
                        </plugin>
                    </plugins>
                </pluginManagement>
            </build>
        </profile>
        <profile>
            <!-- Use latest javassist version on JDK > 9 -->
            <id>jdk9</id>
            <activation>
                <jdk>[1.9,)</jdk>
            </activation>
            <properties>
                <version.javassist>3.22.0-CR2</version.javassist>
                <processor.plugin.compilerArguments>--add-modules=java.xml.bind</processor.plugin.compilerArguments>
                <!-- When forking, we need another flag -->
                <!--<processor.plugin.compilerArguments>&#45;&#45;add-modules=java.xml.bind -J&#45;&#45;add-modules=java.xml.bind</processor.plugin.compilerArguments>-->
                <surefire.openejb.jvm.params>--add-modules=java.xml.bind,java.corba</surefire.openejb.jvm.params>
                <version.enforcer.plugin>3.0.0-M1</version.enforcer.plugin>
                <maven.processor.source>1.9</maven.processor.source>
                <maven.processor.target>1.9</maven.processor.target>
            </properties>
            <repositories>
                <repository>
                    <id>JBoss Snapshots</id>
                    <name>JBoss Snapshots</name>
                    <url>http://repository.jboss.org/nexus/content/groups/public/</url>
                </repository>
            </repositories>
        </profile>
        <profile>
            <id>blazebit-release</id>
            <modules>
                <module>parent</module>
                <module>core</module>
                <module>entity-view</module>
                <module>jpa-criteria</module>
                <module>integration</module>
                <module>testsuite-base</module>
                <module>documentation</module>
                <module>website</module>
                <module>checkstyle-rules</module>
                <module>archetype</module>
                <module>dist</module>
            </modules>
