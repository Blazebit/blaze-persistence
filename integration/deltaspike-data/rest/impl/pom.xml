    </dependencies>

    <profiles>
        <profile>
            <id>deltaspike-2.0</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <dependencyManagement>
                <dependencies>
                    <dependency>
                        <groupId>org.apache.deltaspike.distribution</groupId>
                        <artifactId>distributions-bom</artifactId>
                        <version>${version.deltaspike-2.0}</version>
                        <type>pom</type>
                        <scope>import</scope>
                    </dependency>
                </dependencies>
            </dependencyManagement>
        </profile>
