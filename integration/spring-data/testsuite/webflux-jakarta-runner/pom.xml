    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <systemPropertyVariables>
                        <jdbc.url>jdbc:h2:mem:test;DB_CLOSE_DELAY=-1</jdbc.url>
                        <jdbc.user>admin</jdbc.user>
                        <jdbc.password>admin</jdbc.password>
                        <jdbc.driver>org.h2.Driver</jdbc.driver>
                        <user.timezone>UTC</user.timezone>
                        <activeProfiles>hibernate</activeProfiles>
                    </systemPropertyVariables>
                    <dependenciesToScan>
                        <dependency>com.blazebit:blaze-persistence-integration-spring-data-testsuite-webflux-jakarta</dependency>
                    </dependenciesToScan>
                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>org.apache.maven.surefire</groupId>
                        <artifactId>surefire-junit47</artifactId>
                        <version>${version.surefire.plugin}</version>
                    </dependency>
                </dependencies>
            </plugin>
        </plugins>
    </build>
