        <testBasePackage>com.blazebit.persistence.view.testsuite</testBasePackage>
        <surefireForkCount>2</surefireForkCount>
        <test>EntityViewTestsuite*</test>
        <!-- Needed to assert ProxyFactory#close() is effective -->
        <surefire.jvm.params.ProxyFactoryTest>
            --add-opens com.blazebit.persistence.view.impl/com.blazebit.persistence.view.impl.proxy=com.blazebit.persistence.view.testsuite
        </surefire.jvm.params.ProxyFactoryTest>
        <!-- Needed to allow setting the "global" proxy factory into an existing EVM -->
        <surefire.jvm.params.AbstractEntityViewTest>
            --add-opens com.blazebit.persistence.view.impl/com.blazebit.persistence.view.impl=com.blazebit.persistence.view.testsuite
        </surefire.jvm.params.AbstractEntityViewTest>

        <surefire.jvm.params>
            --add-opens java.base/java.lang=ALL-UNNAMED
            ${surefire.jvm.params.ProxyFactoryTest}
            ${surefire.jvm.params.AbstractEntityViewTest}
        </surefire.jvm.params>
    </properties>

