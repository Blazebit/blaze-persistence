<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.blazebit</groupId>
        <artifactId>blaze-persistence-parent</artifactId>
        <version>1.2.0-SNAPSHOT</version>
        <relativePath>../parent/pom.xml</relativePath>
    </parent>

    <artifactId>blaze-persistence-website</artifactId>

    <name>Blazebit Persistence Website</name>

    <properties>
        <!-- The current stable version -->
        <stable.version>1.2.0-Alpha1</stable.version>
        <!-- The current stable version -->
        <snapshot.version>1.2.0-SNAPSHOT</snapshot.version>

        <!-- This is used for the htaccess file for filename based caching -->
        <maven.build.timestamp.format>yyyyMMddHHmmssSSSS</maven.build.timestamp.format>
        <buildtime>${maven.build.timestamp}</buildtime>

        <asciidoctor.option.template_dirs>${basedir}/src/main/jbake/templates/asciidoctor</asciidoctor.option.template_dirs>
    </properties>

    <dependencies>
        <!-- Add the dependency so that building with dependent modules also builds that -->
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>blaze-persistence-documentation</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>local-serve</id>
            <properties>
                <site.domain>localhost:8820</site.domain>
                <site.domain.regex>localhost:8820</site.domain.regex>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.blazebit</groupId>
                        <artifactId>jbake-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <phase>compile</phase>
                                <goals>
                                    <goal>serve</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${project.build.directory}/site</outputDirectory>
                                    <properties>
                                        <site.host>http://${site.domain}/</site.host>
                                    </properties>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>local</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <site.domain>localhost:8820</site.domain>
                <site.domain.regex>localhost:8820</site.domain.regex>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.blazebit</groupId>
                        <artifactId>jbake-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>build</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${project.build.directory}/site</outputDirectory>
                                    <properties>
                                        <site.host>http://${site.domain}/</site.host>
                                    </properties>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>staging</id>
            <properties>
                <site.domain>staging-persistence.blazebit.com</site.domain>
                <site.domain.regex>staging-persistence\.blazebit\.com</site.domain.regex>
            </properties>
            <distributionManagement>
                <site>
                    <id>staging-persistence.blazebit.com</id>
                    <name>persistence.blazebit.com Staging</name>
                    <url>scp://staging-persistence.blazebit.com/var/www/virtual/staging-persistence.blazebit.com/htdocs</url>
                </site>
            </distributionManagement>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.blazebit</groupId>
                        <artifactId>jbake-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>build</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${project.build.directory}/site</outputDirectory>
                                    <properties>
                                        <site.host>https://${site.domain}/</site.host>
                                    </properties>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>blazebit-release</id>
            <properties>
                <site.domain>persistence.blazebit.com</site.domain>
                <site.domain.regex>persistence\.blazebit\.com</site.domain.regex>
            </properties>
            <distributionManagement>
                <site>
                    <id>persistence.blazebit.com</id>
                    <name>persistence.blazebit.com</name>
                    <url>scp://persistence.blazebit.com/var/www/virtual/persistence.blazebit.com/htdocs</url>
                </site>
            </distributionManagement>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.blazebit</groupId>
                        <artifactId>jbake-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>build</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${project.build.directory}/site</outputDirectory>
                                    <properties>
                                        <site.host>https://${site.domain}/</site.host>
                                    </properties>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>com.blazebit</groupId>
                    <artifactId>jbake-maven-plugin</artifactId>
                    <version>1.0.0</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-site-plugin</artifactId>
                    <version>3.6</version>
                    <dependencies>
                        <dependency>
                            <groupId>org.apache.maven.wagon</groupId>
                            <artifactId>wagon-ssh</artifactId>
                            <version>2.10</version>
                        </dependency>
                    </dependencies>
                </plugin>
            </plugins>
        </pluginManagement>

        <plugins>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>update-htaccess</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <overwrite>true</overwrite>
                            <outputDirectory>${project.build.directory}/site</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${basedir}/src/main/jbake/assets</directory>
                                    <includes>
                                        <include>.htaccess</include>
                                    </includes>
                                    <filtering>true</filtering>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-documentation</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <overwrite>true</overwrite>
                            <outputDirectory>${project.build.directory}/site/documentation</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${basedir}/../documentation/target/generated-docs</directory>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
